              <i class="fas fa-book-open" style="color: #2c4c64;"></i>
            </div>
          </div>
        </div>
      </li>
      <li>
        <div class="bookmarked-shuffled-overview-list">
          <div class="bookmarked-shuffled-overview-list-title-on-profile">
            <div class="header-selection-wrapper">
              <i class="fas fa-book-open" style="color: #2c4c64;"></i>
              <i class="fas fa-heart"></i>
            </div>
            <div>
              <%= link_to '#bookmarked_my_shuffled_overviews', class: "header-selection-wrapper tab-link", data: { target: "#bookmarked-my-shuffled-overviews-content" }, onclick: "event.preventDefault(); window.location.href='/profile#bookmarked_my_shuffled_overviews';" do %>
